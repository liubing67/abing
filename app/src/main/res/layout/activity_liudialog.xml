    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/but_dialog1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单选对话框"/>
            <Button
                android:id="@+id/but_dialog2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仿IOS底部弹出"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
