<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
	android:background="#80000000"
	>
	<RelativeLayout
		android:layout_width="270dp"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		>
		<ImageView
			android:id="@+id/iv_bg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@mipmap/tooltip_bg_update"
			/>
		<TextView
			android:id="@+id/text_version"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/iv_bg"

			android:textColor="@color/white"
			android:textSize="17sp"
			android:layout_marginBottom="5dp"
			android:layout_centerHorizontal="true"/>
		<TextView
			android:id="@+id/text_updateMessage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/iv_bg"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingBottom="20dp"
			android:paddingTop="10dp"
			android:textColor="#000000"
			android:textSize="14sp"
			android:text="111111111\n2222222\n2222222222222222222222\n55555555555555555555555555555555555"
			android:background="@color/white"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_below="@+id/text_updateMessage"
			android:background="@drawable/background_updatedialog"
			android:layout_marginTop="1dp"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/text_cancle"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:text="冷漠地无视"
				android:gravity="center"
				android:textColor="#999999"
				android:textSize="14sp"
				/>
			<View
				android:id="@+id/view_Split"
				android:layout_width="1dp"
				android:layout_height="30dp"
				android:background="@color/gray"
				android:layout_gravity="center"/>
			<TextView
				android:id="@+id/text_update"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:text="去更新"
				android:gravity="center"
				android:textColor="@color/themecolor"
				android:textSize="14sp"/>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
