<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <include
        android:id="@+id/include_title"
        layout="@layout/aactivity_titlehead"/>

    <RelativeLayout
        android:id="@+id/rela_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/include_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backgroud_corner_person"
        >
        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/text_phone"
            android:background="@drawable/edittext_noborder_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:layout_toLeftOf="@+id/text_getcode"/>
        <TextView
            android:id="@+id/text_getcode"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:background="@drawable/button_corner_background"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rela_verificationcode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rela_phone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backgroud_corner_person"
        >
        <TextView
            android:id="@+id/text_verificationcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/text_verificationcode"
            android:background="@drawable/edittext_noborder_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_verificationcode"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <Button
            android:id="@+id/button_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/shapebluecornerlogin"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
